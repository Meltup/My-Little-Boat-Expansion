<?xml version="1.0" encoding="utf-8" ?>

<Defs>
	
	<!-- Canoe -->
	<ThingDef ParentName="BoatBase">
		<defName>SPBoats_CanoeBlueprint</defName>
		<label>Canoe</label>
		<description>A simple one-man boat for quick travels.</description>
		<graphicData>
			<texPath>Ships/canoe/Canoe_north</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>(2.2,2.7)</drawSize>
		</graphicData>
		<uiIconScale>0.85</uiIconScale>

		<statBases>
			<MaxHitPoints>200</MaxHitPoints>
			<WorkToBuild>10000</WorkToBuild>
			<Flammability>0.75</Flammability>
		</statBases>
		<size>(1,3)</size>
		
		<researchPrerequisites>
			<li>Canoe</li>
		</researchPrerequisites>
		<costList>
			<WoodLog>175</WoodLog>
		</costList>
		
		<soundImpactDefault>BulletImpact_Wood</soundImpactDefault>
		
		<modExtensions>
			<li Class="RimShips.Build.SpawnThingBuilt">
				<thingToSpawn>SPBoats_PawnKind_Canoe</thingToSpawn>
				<soundFinished>ShipBigConstruction</soundFinished>
			</li>
		</modExtensions>
			
	</ThingDef>
	
	<!--Fishing Canoe -->
	<ThingDef ParentName="BoatBase">
		<defName>SPBoats_FishingCanoeBlueprint</defName>
		<label>Fishing canoe</label>
		<description>A simple one-man boat for gathering fish.</description>
		<graphicData>
			<texPath>Ships/fishingcanoe/FishingCanoe_north</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>(3.3,2.7)</drawSize>
		</graphicData>
		<!-- <uiIconScale>0.9</uiIconScale> -->

		<statBases>
			<MaxHitPoints>300</MaxHitPoints>
			<WorkToBuild>12500</WorkToBuild>
			<Flammability>0.75</Flammability>
		</statBases>
		<size>(2,3)</size>
		
		<researchPrerequisites>
			<li>FishingCanoe</li>
		</researchPrerequisites>
		<costList>
			<WoodLog>275</WoodLog>
			<Steel>25</Steel>
		</costList>
		
		<soundImpactDefault>BulletImpact_Wood</soundImpactDefault>
		
		<modExtensions>
			<li Class="RimShips.Build.SpawnThingBuilt">
				<thingToSpawn>SPBoats_PawnKind_FishingCanoe</thingToSpawn>
				<soundFinished>ShipBigConstruction</soundFinished>
			</li>
		</modExtensions>
			
	</ThingDef>
	
	<!--Sloop -->
	<ThingDef ParentName="BoatBase">
		<defName>SPBoats_SloopBlueprint</defName>
		<label>Sloop</label>
		<description>A small versatile ship. It is primary used for trading and casual fishing.</description>
		<graphicData>
			<texPath>Ships/sloop/Sloop_north</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>(6,10)</drawSize>
		</graphicData>
		<uiIconScale>0.6</uiIconScale>

		<statBases>
			<MaxHitPoints>3600</MaxHitPoints>
			<WorkToBuild>60000</WorkToBuild>
			<Flammability>0.75</Flammability>
		</statBases>
		<size>(2,6)</size>
		
		<researchPrerequisites>
			<li>Sloop</li>
		</researchPrerequisites>
		<costList>
			<WoodLog>650</WoodLog>
			<Cloth>150</Cloth>
			<Steel>40</Steel>
		</costList>
		
		<soundImpactDefault>BulletImpact_Wood</soundImpactDefault>
		
		<modExtensions>
			<li Class="RimShips.Build.SpawnThingBuilt">
				<thingToSpawn>SPBoats_PawnKind_Sloop</thingToSpawn>
				<soundFinished>ShipBigConstruction</soundFinished>
			</li>
		</modExtensions>
			
	</ThingDef>
	
</Defs>
